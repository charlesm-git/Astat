#:kivy 2.3.1

<ToDoListScreen>
    md_bg_color: app.theme_cls.backgroundColor
    MDFloatLayout:
        MDScrollView:
            do_scroll_x: False
            MDBoxLayout:
                id: scroll_view_content
                orientation: 'vertical'
                padding: dp(20), dp(20), dp(20), dp(100)
                spacing: dp(20)
                adaptive_height: True

        MDFabButton:
            icon: "plus"
            pos_hint: {"right": 0.92, "y": 0.03}
            on_release: root.manager.current = 'todolist-add'
            color_map: 'secondary'
            theme_icon_color: 'Custom'
            icon_color: app.theme_cls.onPrimaryColor

<ToDoListItem>
    style: "elevated"
    pos_hint: {"center_x": .5}
    padding: dp(20), dp(10)
    size_hint: 1, None
    adaptive_height: True
    on_release: root.open_todolist_detail()

    MDBoxLayout:
        orientation: 'horizontal'
        pos_hint: {"center_y": .5}
        adaptive_height: True

        MDLabel:
            text: root.title
            role: 'large'
            font_style: 'Title'
            color: app.theme_cls.primaryColor
            adaptive_height: True
            bold: True