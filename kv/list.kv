#:kivy 2.3.1

<AscentItem>
    orientation: 'horizontal'
    # md_bg_color: self.theme_cls.primaryContainerColor
    adaptive_height: True
    spacing: dp(10)

    canvas.after:
        Color:
            rgba: 0.5, 0.5, 0.5, 1  # Light gray color for the line
        Line:
            points: self.x, self.y, self.right, self.y  # Draws a line at the bottom
            width: 1  # Thickness of the line

    MDLabel:
        text: root.date
        # md_bg_color: self.theme_cls.primaryColor
        adaptive_width: True
        text_color: 0.2, 0.2, 0.2, 1
        italic: True
        font_style: 'Body'
        role: 'small'
    
    MDLabel:
        text: root.name
        # md_bg_color: self.theme_cls.primaryColor
        multiline: True
        bold: True
        font_style: 'Title' if root.is_group else 'Body'
        role: 'large' if root.is_group else 'medium'
    
    MDLabel:
        text: root.grade
        # md_bg_color: self.theme_cls.primaryColor
        adaptive_width: True
        text_color: self.theme_cls.primaryColor
        font_style: 'Body'
        role: 'medium'

    MDLabel:
        text: root.area
        # md_bg_color: self.theme_cls.primaryColor
        adaptive_width: True
        font_style: 'Body'
        role: 'medium'



<AscentManager>
    md_bg_color: self.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            spacing: dp(10)

            MDLabel:
                text: "Sort by"
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            MDButton:
                id: sort_by_date
                style: 'elevated'
                on_release: root.load_by_date()
                MDButtonText:
                    text: 'Date'

            MDButton:
                id: sort_by_grade
                style: 'elevated'
                on_release: root.load_by_grade()
                MDButtonText:
                    text: 'Grade'

        MDRecycleView:
            viewclass: 'AscentItem'
            id: ascent_list
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(60)
            bar_width: dp(10)
            
            RecycleBoxLayout:
                orientation: 'vertical'
                default_size: None, dp(40)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

