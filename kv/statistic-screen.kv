#:kivy 2.3.1

<GraphBlock>
    orientation: 'vertical'
    adaptive_height: True
    spacing: dp(10)

    MDLabel:
        text: root.title
        adaptive_height: True
        size_hint_x: 1
        text_size: self.size
        halign: 'center'
        font_style: 'Title'
        role: 'large'
        text_color: app.theme_cls.secondaryColor
        bold: True
    Image:
        id: image
        source: root.image_path
        size_hint: 1, None
        height: self.width * (self.texture_size[1] / self.texture_size[0]) if self.texture else dp(200)

<StatisticScreen>
    md_bg_color: app.theme_cls.backgroundColor
    MDScrollView:
        do_scroll_x: False
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(30)
            adaptive_height: True

            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_size: True
                spacing: dp(20)
                MDLabel:
                    text: 'Total number of ascents: '
                    adaptive_size: True
                MDLabel:
                    id: total_ascent_input
                    adaptive_size: True

            GraphBlock:
                id: graph_ascent_per_area
                title: "Ascent per Area"
                image_path: "statistic/graphs/graph_ascent_per_area.png"

            GraphBlock:
                id: graph_ascent_per_grade
                title: "Ascent per Grade"
                image_path: "statistic/graphs/graph_ascent_per_grade.png"

            GraphBlock:
                id: graph_ascent_per_year
                title: "Ascent per Year"
                image_path: "statistic/graphs/graph_ascent_per_year.png"
                