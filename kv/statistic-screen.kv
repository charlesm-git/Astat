#:kivy 2.3.1

<CustomTitleLabel>
    adaptive_height: True
    size_hint_x: 1
    text_size: self.size
    halign: 'center'
    font_style: 'Title'
    role: 'large'
    text_color: app.theme_cls.primaryColor
    bold: True

<TableCell@MDLabel>
    adaptive_height: True
    text_size: self.size
    shorten: True
    shorten_from: 'right'
    halign: 'center'
    valign: 'middle'
    padding: dp(4)

<TableRow>
    orientation: 'horizontal'
    adaptive_height: True
    md_bg_color: app.theme_cls.primaryContainerColor if self.is_header else app.theme_cls.backgroundColor
    
    TableCell:
        text: root.value
        bold: True if root.is_header else False
    MDDivider:
        orientation: 'vertical'
    TableCell:
        text: root.nbre_of_ascents
        bold: True if root.is_header else False
    MDDivider:
        orientation: 'vertical'
    TableCell:
        text: root.pourcentage
        bold: True if root.is_header else False

<Table>
    orientation: 'vertical'
    adaptive_height: True
    padding: 0, 0, 0, dp(20)
    CustomTitleLabel:
        text: root.title
        padding: 0, 0, 0, dp(15)

<CustomTableTab>
    MDScrollView:
        MDBoxLayout:
            id: tab_scroll_view
            orientation: 'vertical'
            padding: 0, dp(10), 0, dp(100)
            adaptive_height: True
            Table:
                id: table
                adaptive_height: True

<GeneralInfoTab>
    orientation: 'vertical'
    padding: 0, dp(40)
    CustomTitleLabel:
        text: 'Total number of ascents'
    CustomTitleLabel:
        id: total_ascents
        text: root.total_number_of_ascent
        font_style: 'Display'
        role: 'small'
    CustomTitleLabel:
        text: 'Average grade'
    CustomTitleLabel:
        id: total_ascents
        text: root.average_grade
        font_style: 'Display'
        role: 'small'
    Widget:

<StatisticScreen>
    md_bg_color: app.theme_cls.backgroundColor
    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(30)
            CustomTitleLabel:
                id: filter_display
                bold: False
                halign: 'left'
                font_style: 'Title'
                role: 'medium'
            MDTabsPrimary:
                id: tabs
                size_hint_y: None
                MDDivider:
                MDTabsCarousel:
                    id: carousel
                    size_hint_y: None
                    height: dp(450)
                    lock_swiping: True
            Widget:
        MDFabButton:
            icon: "filter-outline"
            pos_hint: {"right": 0.8, "y": 0.03}
            on_release: root.manager.current = 'statistic-filter'
            color_map: 'secondary'
            theme_icon_color: 'Custom'
            icon_color: app.theme_cls.onPrimaryColor
