#:kivy 2.3.1

<CustomTitleLabel>
    adaptive_height: True
    size_hint_x: 1
    text_size: self.size
    halign: 'center'
    font_style: 'Title'
    role: 'large'
    text_color: app.theme_cls.primaryColor
    bold: True

<TableCell@MDLabel>
    adaptive_height: True
    text_size: self.size
    shorten: True
    shorten_from: 'right'
    halign: 'center'
    valign: 'middle'
    padding: dp(4)

<TableRow>
    orientation: 'horizontal'
    adaptive_height: True
    md_bg_color: app.theme_cls.primaryContainerColor if self.is_header else app.theme_cls.backgroundColor
    
    TableCell:
        text: root.value
        bold: True if root.is_header else False
    MDDivider:
        orientation: 'vertical'
    TableCell:
        text: root.nbre_of_ascents
        bold: True if root.is_header else False
    MDDivider:
        orientation: 'vertical'
    TableCell:
        text: root.pourcentage
        bold: True if root.is_header else False

<Table>
    orientation: 'vertical'
    adaptive_height: True
    padding: 0, 0, 0, dp(20)
    CustomTitleLabel:
        text: root.title
        padding: 0, 0, 0, dp(15)

<StatisticScreen>
    md_bg_color: app.theme_cls.backgroundColor
    MDScrollView:
        MDBoxLayout:
            id: scroll_view_content
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)
            adaptive_height: True
            
            CustomTitleLabel:
                text: 'Total number of ascents'
            CustomTitleLabel:
                id: total_ascents
                font_style: 'Display'
                role: 'small'
                