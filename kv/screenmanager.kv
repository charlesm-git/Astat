#:kivy 2.3.1
#:import Factory kivy.factory.Factory

<BaseMDNavigationItem>

    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text


<MainScreenManager>:
    orientation: 'vertical'

    MDScreenManager:
        id: screen_manager
        AscentListScreen:
            name: 'ascent-list'
        AscentScreen:
            name: 'ascent'
        LocationScreen:
            name: 'area'
        StatisticScreen:
            name: 'statistic'
        StatisticFilterScreen:
            name: 'statistic-filter'
        SettingsScreen:
            name: 'settings'
        ToDoListScreen:
            name: 'todolist'
        ToDoListDetailScreen:
            name: 'todolist-detail'
        ToDoListAddScreen:
            name: 'todolist-add'
        ToDoClimbScreen:
            name: 'todoclimb'

    MDNavigationBar:
        on_switch_tabs: root.on_switch_tabs(args[1])
        BaseMDNavigationItem:
            name: 'ascent-list'
            icon: "checkbox-marked-outline"
            text: "Ascents"
            active: True

        BaseMDNavigationItem:
            name: 'statistic'
            icon: "chart-donut-variant"
            text: "Statistic"
        
        BaseMDNavigationItem:
            name: 'todolist'
            icon: "format-list-bulleted"
            text: "To-Do List"

        BaseMDNavigationItem:
            name: 'settings'
            icon: "cog"
            text: "Settings"