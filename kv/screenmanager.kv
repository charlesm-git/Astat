#:kivy 2.3.1
#:import Factory kivy.factory.Factory

<BaseMDNavigationItem>

    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text


<MainScreenManager>:
    orientation: 'vertical'

    MDScreenManager:
        id: screen_manager
        ListScreen:
            name: 'ascents-list'
        AddingAscentScreen:
            name: 'add-ascent'
        AddingAreaScreen:
            name: 'add-area'
        StatisticScreen:
            name: 'statistic'
        StatisticFilterScreen:
            name: 'statistic-filter'
        SettingsScreen:
            name: 'settings'

    MDNavigationBar:
        on_switch_tabs: root.on_switch_tabs(args[1])
        BaseMDNavigationItem:
            name: 'ascents-list'
            icon: "format-list-bulleted"
            text: "Ascents"
            active: True

        BaseMDNavigationItem:
            name: 'statistic'
            icon: "chart-donut-variant"
            text: "Statistic"

        BaseMDNavigationItem:
            name: 'settings'
            icon: "cog"
            text: "Settings"