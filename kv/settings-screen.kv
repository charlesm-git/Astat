#:kivy 2.3.1
<SettingsScreen>
    md_bg_color: app.theme_cls.backgroundColor
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        MDList:
            MDListItem:
                on_release: root.get_area_screen()
                MDListItemLeadingIcon:
                    icon: "map"
                MDListItemHeadlineText:
                    text: "Manage Areas"
                MDListItemSupportingText:
                    text: "Add and delete areas"
            MDListItem:
                disabled: True
                MDListItemLeadingIcon:
                    icon: "database-import"
                MDListItemHeadlineText:
                    text: "Import database"
                MDListItemSupportingText:
                    text: "Import a CSV file to the database"
            MDListItem:
                disabled: True
                MDListItemLeadingIcon:
                    icon: "database-export"
                MDListItemHeadlineText:
                    text: "Export database"
                MDListItemSupportingText:
                    text: "Export a CSV file from the database"
            MDListItem:
                on_release: root.import_db_as_db_file()
                MDListItemLeadingIcon:
                    icon: "database-import-outline"
                MDListItemHeadlineText:
                    text: "Import database"
                MDListItemSupportingText:
                    text: "Import a astat.db file"
            MDListItem:
                on_release: root.export_db_as_db_file()
                MDListItemLeadingIcon:
                    icon: "database-export-outline"
                MDListItemHeadlineText:
                    text: "Export database"
                MDListItemSupportingText:
                    text: "Export a astat.db file"
        Widget: